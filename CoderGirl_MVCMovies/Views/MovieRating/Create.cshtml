
@{
    ViewData["Title"] = "Rate Movie";
}

<h1>Rate Movie</h1>
<a asp-controller="Rate Movie" asp-action="Create"></a>

<form method="post">
    <select name="movieName">
        @if (String.IsNullOrEmpty(ViewBag.MovieName) == true && ViewBag.Rating == 0)
        {
            @foreach (var movie in ViewBag.Movies)
            {
                <option id="movie.Id">@movie.Name</option>
            }
        }
        else
        {
           <option>@ViewBag.MovieName</option>
        }


    </select>
    <select name="rating">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
    </select>
    <button type="submit">Rate it</button>
</form>

