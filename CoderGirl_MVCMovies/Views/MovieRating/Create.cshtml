@model List<CoderGirl_MVCMovies.Models.Movie>

@{
    ViewData["Title"] = "Rate Movie";
}

<h1>Rate a Movie</h1>
<form id="add-movierating" method='post'>
    <select name="MovieName">
        @foreach (var movie in ViewBag.Movies)
        {
            <option asp-for="MovieName">@movie.Name</option>
        }
    </select>
    <select name="Rating">
        <option asp-for="Rating">1</option>
        <option asp-for="Rating">2</option>
        <option asp-for="Rating">3</option>
        <option asp-for="Rating">4</option>
        <option asp-for="Rating">5</option>
    </select>
    <button type='submit'>Rate Movie</button>
</form>


