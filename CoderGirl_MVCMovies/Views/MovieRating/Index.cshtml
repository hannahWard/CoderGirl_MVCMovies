@model List<CoderGirl_MVCMovies.Models.MovieRating>
@{
    ViewData["Title"] = "Movie Ratings";
}

<h1>Movie Ratings</h1>
<table>
    <tr>
        <th>Movie</th>
        <th>Rating</th>
    </tr>
    @foreach (var movie in Model)
    {
        <tr>

            <td id="@movie.Id">@movie.MovieName</td>
            <td id="@movie.Id">@movie.Rating</td>
            <td><a asp-controller="MovieRating" asp-action="Edit" asp-route-id="@movie.Id">Edit</a></td>
            <td><a asp-controller="MovieRating" asp-action="Delete" asp-route-id="@movie.Id">Delete</a></td>
            
        </tr>
    }
    </table>
<div><a id="add-movierating" asp-action="Create">Rate a Movie</a></div>
