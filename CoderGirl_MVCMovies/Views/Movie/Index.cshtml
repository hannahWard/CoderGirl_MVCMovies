@model IEnumerable<CoderGirl_MVCMovies.ViewModels.Movies.MovieListItemViewModel>

@{
    ViewData["Title"] = "Movies";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DirectorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                Average Rating
            </th>
            <th>
                Number of Ratings
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr id="@item.Id">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DirectorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            @if (item.Ratings.Count > 0)
            {
                <td>@item.Ratings.Average()</td>
            }
            else
            {
                <td>none</td>
            }
            <td>@item.Ratings.Count()</td>
            
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                <a asp-controller="MovieRating" asp-action="Create" asp-route-movieId="@item.Id" id="Rate">Rate</a>
            </td>

        </tr>
}
    </tbody>
</table>
